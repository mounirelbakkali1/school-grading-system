<VBox alignment="CENTER" prefHeight="646.0" prefWidth="1010.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ma.example.schoolsystem.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="School Management System" textAlignment="CENTER" textFill="#ff2f00" fx:id="welcomeText">
      <font>
         <Font name="Bodoni MT Bold" size="27.0" />
      </font>
   </Label>
   <ImageView fitHeight="464.0" fitWidth="650.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../../assets/main.png" />
      </image>
   </ImageView>
   <Button mnemonicParsing="false" onAction="#moveToLogin" prefHeight="25.0" prefWidth="371.0" text="Login" textAlignment="CENTER">
      <font>
         <Font size="15.0" />
      </font>
      <effect>
         <Blend />
      </effect>
   </Button>
</VBox>
